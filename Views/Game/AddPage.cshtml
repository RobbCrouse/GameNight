<div class="container addGame img-fluid" id="addGameBG">


    <h1>Create a Party!</h1>
    <div asp-validation-summary="All"></div>

    <form asp-controller="Game" asp-action="CreateGameForm" method="Post">

        <div class="form-group row" id="GameAndPlatformFields">
            <div class="col-md-3">
                <input class="form-control" asp-for="Title"/><br>
            </div>

            <div class="col-md-3">
                <input class="form-control" asp-for="Platform"/><br>
            </div>
        </div>

        <div class="form-group row" id="DateAndTimeFields">
            <div class="form-group col-md-3">
                <input class="form-control" asp-for="Date"/><br>
            </div>

            <div class="form-group col-md-3">
                <input class="form-control" asp-for="Time"/><br>
            </div>
        </div>

        <div class="form-group row" id="DurationAndTimeSpanFields">
            <div class="form-group col-md-3">
                <input class="form-control" asp-for="Duration"/>
            </div>

            <div class="form-group col-md-3">
                <h4>
                    <label asp-for="TimeSpan"></label>
                        <select name="TimeSpan">
                            <option value="Minutes">Minutes</option>
                            <option value="Hours">Hours</option>
                            <option value="Days">Days</option>
                        </select>
                </h4>
            </div>
        </div>

        <div class="form-group">
            <input class="form-control" asp-for="Description"/><br>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info" id="gameBtns">Create Party</button>
        </div>

    </form>

